<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yh.videoplayer.mapper.UserMapper">
    <select id="getAllUser"  resultType="com.yh.videoplayer.pojo.User">
        select id,name,age,password from user;
    </select>
    <select id="getUsersByNameAndAge"  resultType="com.yh.videoplayer.pojo.User">
        select id, name, age,password from user
        <where>
            <if test="name != null and name != ''">
                and name like concat('%',#{name},'%')
            </if>
            <if test="age != null and age != ''">
                and age >= #{age}
            </if>
        </where>
    </select>
</mapper>

